<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:context=".DetailListFragment">

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_step_button_height"
        android:text="@string/ingredients_button_text"
        android:id="@+id/ingredient_button"
        app:layout_constraintBottom_toTopOf="@+id/rv_detail_list"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_detail_list"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_button"/>

</android.support.constraint.ConstraintLayout>
